<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TopAlignImageButton" parent="BaseImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="CenterImageButton" parent="BaseImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="SideImageButton" parent="BaseImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>